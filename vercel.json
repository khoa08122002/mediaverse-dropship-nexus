{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/backend/main.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "dist/assets/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "dist/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "dist/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "dist/manifest.json"
    },
    {
      "src": "^/robots.txt",
      "dest": "dist/robots.txt"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json))",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
} 